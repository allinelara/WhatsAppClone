<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorPrimary"
    android:layout_height="match_parent"
    tools:context="com.example.allininha.whatsapp.activity.Login2Activity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">
    <ImageView
        android:layout_width="200dp"
        android:layout_height="163dp"
        android:src="@drawable/logo"
        android:layout_marginTop="15dp"
        android:id="@+id/logo"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo"
        android:layout_marginTop="10dp"
        android:id="@+id/email"
        android:inputType="textEmailAddress"
        android:hint="Digite seu e-mail"
        android:textColor="@color/colorAccent"/>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/email"
            android:layout_marginTop="10dp"
            android:id="@+id/senha"
            android:hint="Digite sua senha"
            android:inputType="textPassword"
            android:textColor="@color/colorAccent"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/senha"
            android:layout_marginTop="20dp"
            android:id="@+id/btnLogar"
            android:text="LOGAR"
            android:theme="@style/botaoVerde"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NÃ£o tem conta? Cadastra-se."
            android:layout_centerHorizontal="true"
            android:textColor="@color/colorAccent"
            android:layout_marginTop="10dp"
            android:id="@+id/textoCadastrar"
            android:layout_below="@id/btnLogar"/>

    </RelativeLayout>
</RelativeLayout>
