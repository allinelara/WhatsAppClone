<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.example.allininha.whatsapp.activity.ValidadorActivity">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="163dp"
        android:src="@drawable/logo"
        android:layout_marginTop="15dp"
        android:id="@+id/logo"
        android:layout_centerHorizontal="true"/>

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/textcolorPrimary"
        android:id="@+id/validacao"
        android:layout_centerHorizontal="true"
        android:textSize="22dp"
        android:layout_below="@+id/logo"
        android:layout_marginTop="50dp"
        android:text="Validaçāo"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/textcolorPrimary"
        android:layout_below="@+id/validacao"
        android:id="@+id/texto"
        android:textSize="14dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:text="Você recebeu SMS para validacao do seu número, digite o código de validacao no campo abaixo:"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/texto"
        android:hint="Código"
        android:layout_marginTop="10dp"
        android:id="@+id/codigo"
        android:textColor="@color/textcolorPrimary"
        android:layout_centerHorizontal="true"/>
    <Button
        android:id="@+id/validarBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/codigo"
        android:layout_marginTop="21dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:textColor="@color/colorAccent"
        android:background="@color/colorPrimaryDark"
        android:text="VALIDAR" />
</RelativeLayout>
